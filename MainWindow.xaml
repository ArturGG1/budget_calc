<Window x:Class="budget_calc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:budget_calc"
        mc:Ignorable="d"
        Title="Личный бюджет на месяц" Height="900" Width="1200"
        Foreground="White" Background="#2E2E2E"
        SizeChanged="MainWindow_OnSizeChanged">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="10,5,0,0"/>
            <Setter Property="FontFamily" Value="pack://application:,,,/Fonts/#Nunito"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <EventSetter Event="Click" Handler="Button_OnClick"/>
        </Style>
    </Window.Resources>
    <Grid Name="Grid1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" MinWidth="200" MaxWidth="400"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!-- Все кнопки -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">
                <Button Name="ButtonOverview" Content="Обзор"/>
                <Button Name="ButtonIncome" Content="Доход"/>
                <Button Name="ButtonHousing" Content="Жильё"/>
                <Button Name="ButtonEntertainment" Content="Развлечения"/>
                <Button Name="ButtonTransport" Content="Транспорт"/>
                <Button Name="ButtonCredits" Content="Кредиты"/>
                <Button Name="ButtonInsurance" Content="Страхование"/>
                <Button Name="ButtonTaxes" Content="Налоги"/>
                <Button Name="ButtonFood" Content="Еда"/>
                <Button Name="ButtonInvest" Content="Инвестиции"/>
                <Button Name="ButtonPets" Content="Питомцы"/>
                <Button Name="ButtonHygiene" Content="Гигиена"/>
                <Button Name="ButtonLegalSpending" Content="Юр. расходы"/>
                <Button Name="ButtonTotalSpending" Content="Общие затраты"/>
            </StackPanel>
        </ScrollViewer>
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Left"/>
        <!-- Здесь страницы -->
        <!-- (Viewbox нужен, чтобы не было проблем с изменением размеров окна) -->
        <Viewbox Grid.Column="2">
            <Frame Name="FrameContent" Source="Pages/Overview.xaml" NavigationUIVisibility="Hidden" VerticalAlignment="Top"/>
        </Viewbox>
    </Grid>
</Window>