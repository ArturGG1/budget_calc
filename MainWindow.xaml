<Window x:Class="budget_calc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:budget_calc"
        mc:Ignorable="d"
        Title="Личный бюджет на месяц" Height="450" Width="800" MinHeight="450" MinWidth="800" MaxHeight="450" MaxWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Orientation="Vertical">
            <Button Name="ButtonOverview" Content="Обзор" Margin="10,10,0,0" Click="ButtonOverview_OnClick"/>
            <Button Name="ButtonIncome" Content="Доход" Margin="10,10,0,0" Click="ButtonIncome_OnClick"/>
        </StackPanel>
        <Frame Name="FrameContent" Grid.Column="1" Source="Overview.xaml"/>
    </Grid>
</Window>